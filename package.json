{
  "name": "@shinzolabs/gmail-mcp",
  "version": "1.0.0",
  "description": "Gmail MCP - Provides Gmail API access with file-based OAuth2 authentication",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "gmail-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node --loader ts-node/esm src/index.ts",
    "auth": "node --loader ts-node/esm src/index.ts auth",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "googleapis": "^129.0.0",
    "google-auth-library": "^9.6.3",
    "open": "^9.1.0",
    "ts-node": "^10.9.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "gmail",
    "mcp",
    "claude",
    "anthropic",
    "email"
  ],
  "author": "Shinzo Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shinzo-labs/gmail-mcp"
  },
  "engines": {
    "node": ">=18.0.0"
  }
